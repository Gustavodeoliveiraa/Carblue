<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Primeiro LinearLayout -->
        <LinearLayout
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:paddingTop="15dp"
                android:src="@drawable/captura_de_tela_2023_11_24_220937" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:fontFamily="@font/fonte"
                android:gravity="center_vertical"
                android:paddingTop="30dp"
                android:text="@string/title"
                android:textColor="#1869E2"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="604dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="452dp"
                android:background="@drawable/addclientebotao"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/nomecarroservico"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Nome"
                    android:layout_marginTop="90dp"
                    android:paddingLeft="15dp"
                    android:background="@android:color/transparent"
                    />

                <EditText
                    android:id="@+id/plcacarro"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Placa"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="195dp"
                    android:background="@android:color/transparent"
                    />

                <EditText
                    android:id="@+id/anocarro"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Ano"
                    android:layout_marginTop="305dp"
                    android:paddingLeft="15dp"
                    android:textAlignment="textStart"
                    android:background="@android:color/transparent"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/addcarro"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/arredondarbotao"
                    android:backgroundTint="@color/button"
                    android:text="Adicionar"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/vertodos"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/arredondarbotao"
                    android:backgroundTint="@color/buttoncinza"
                    android:layout_marginRight="20dp"
                    android:text="Ver todos" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:backgroundTint="@color/button"
                app:itemIconTint="@color/white"
                app:menu="@menu/bottom_navigation_menu" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>