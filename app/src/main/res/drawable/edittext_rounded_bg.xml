<!-- res/drawable/edittext_rounded_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-20dp"> <!-- Ajuste o valor de android:top para 0dp para remover a borda do topo -->
        <shape android:shape="rectangle">
            <corners android:radius="13dp" />

            <stroke
                android:width="1dp"
                android:color="#1869E2" />

            <solid android:color="#00FFFFFF" />

            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</layer-list>